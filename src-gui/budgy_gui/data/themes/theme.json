{
  "#prototype_mono_font": {
    "font": {
      "size": "10",
      "bold": "0",
      "italic": "0",
      "name": "fira_mono",
      "regular_resource": { "package": "budgy_gui.data.fonts", "resource": "FiraMono-Regular.ttf"},
      "bold_resource": { "package": "budgy_gui.data.fonts", "resource": "FiraMono-Bold.ttf"}
    }
  },
  "text_entry_line": {
    "misc": {
      "padding": "16,4"
    }
  },
  "@bold": {
    "font": {
      "name": "fira_mono",
      "size": "25",
      "bold": "1"
    }
  },
  "@bold-16": {
    "font": {
      "name": "fira_mono",
      "size": "16",
      "bold": "1"
    }
  },
  "@vert-centered": {
    "misc": {
      "text_vert_alignment": "center"
    }
  },
  "#data-label": {
    "prototype": "@bold-16",
    "colours": {
      "dark_bg": "#ff0000"
    },
    "misc": {
      "text_horiz_alignment": "left",
      "text_horiz_alignment_padding": "10",
      "text_vert_alignment": "center"
    }
  },
  "#progress-label": {
    "prototype": "@bold-16",
    "misc": {
      "text_horiz_alignment": "right",
      "text_horiz_alignment_padding": "5",
      "text_vert_alignment": "center"
    }
  },
  "@label_left": {
    "misc": {
      "text_horiz_alignment": "left",
      "text_vert_alignment": "center"
    }
  },
  "@label_right": {
    "misc": {
      "text_horiz_alignment": "right",
      "text_vert_alignment": "center"
    }
  },
  "@label_center": {
    "misc": {
      "text_horiz_alignment": "center",
      "text_vert_alignment": "center"
    }
  }
}